@model TaskManagentment.Application.Request.PriorityCreateRequest
@{
    Layout = "~/shared/_AdminLayout.cshtml";
    ViewBag.Title = "Aciliyet Durumu Ekle ";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Create" asp-controller="Priority" asp-area="Admin" method="post">
    <div class="mb-3">
        <label class="form-label">Aciliyet Tanımı :</label>
        <input asp-for="Definition" class="form-control"/>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div  asp-validation-summary="All">

    </div>
</form>