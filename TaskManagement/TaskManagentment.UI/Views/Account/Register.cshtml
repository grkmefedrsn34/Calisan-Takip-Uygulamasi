@model TaskManagentment.Application.Request.RegistarRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-75 mx-auto shadow">
            <div class="text-center mb-3">
                <h4>CoBAC WorkSpace</h4>
                <h5>Personel Yönetim Sistemi</h5>
                <p class="lead"><i>Kayıt Ol</i></p>
            </div>
            <form asp-action="Register" asp-controller="Account" asp-area="" class="form-floating mt-3">

                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
                    <label for="Name">Name</label>
                </div>

                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" asp-for="Surname" placeholder="surname" />
                    <label for="Surname">Surname</label>
                </div>


                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" asp-for="Username" placeholder="User Name" />
                    <label for="Username">Username</label>
                </div>

                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <label for="Password">Password</label>
                </div>

                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password" />
                    <label for="ConfirmPassword">Re-enter your password</label>
                </div>

                <div class="form-floating mb-3 d-grid gap-2">
                    <button class="btn btn-lg btn-primary" type="submit">Register</button>
                    <button class="btn btn-lg btn-info text-white" type="submit" asp-action="Login" asp-controller="Account" asp-area="">Login Return</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>