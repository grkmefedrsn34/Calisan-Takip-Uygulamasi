@model List<TaskManagentment.Application.DTOs.AppTaskListDto>

@{
    Layout = "~/Areas/Admin/Views//shared/_AdminLayout.cshtml";
    ViewBag.Title = "İş Emri Tanımlama Ekranı";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<a asp-action="Create" asp-controller="Priority" asp-area="Admin" class="btn btn-sm btn-success mb-2">Yeni Ekle</a>
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">İş Emri</th>
            <th scope="col">Açıklama</th
            <th scope="col">İşin Aciliyeti</th>
            <th scope="col">İşin Durumu</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @if (Model?.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.PriorityDefinition</td>
                    <td>(@item.state ? "Tamamlandı" : "Tamamlanmadı")</td>
                    <td>
                        <a asp-action="Update" asp-controller="AppTask" asp-area="Admin" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Güncelle</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="AppTask" asp-area="Admin" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Herhangi bir iş emri bulunamadı</td>
            </tr>
        }
    </tbody>
</table>
