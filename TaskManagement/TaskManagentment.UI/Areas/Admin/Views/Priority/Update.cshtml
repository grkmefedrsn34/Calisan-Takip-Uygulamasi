@model TaskManagentment.Application.Request.PriorityUpdateRequest
@{
    Layout = "~/shared/_AdminLayout.cshtml";
    ViewBag.Title = "Aciliyet Durumu Güncelle ";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Update" asp-controller="Priority" asp-area="Admin" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="mb-3">
        <label class="form-label">Aciliyet Tanımı :</label>
        <input asp-for="Definition" class="form-control" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>
</form>